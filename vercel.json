{
  "version": 2,
  "installCommand": "npm install --prefix api && npm install --prefix client",
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/index.js": {
      "maxDuration": 30,
      "includeFiles": "server/**/*.js"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    }
  ]
}
